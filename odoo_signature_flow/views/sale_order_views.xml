<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_view_form_signature_flow" model="ir.ui.view">
        <field name="name">sale.order.view.form.signature.flow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Signatures">
                    <group>
                        <field name="signature_document_type" readonly="1"/>
                        <field name="signature_fully_signed" readonly="1"/>
                    </group>
                    <field name="signature_line_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="slot"/>
                            <field name="role_label" string="Role"/>
                            <field name="signer_user_id"/>
                            <field name="signer_partner_id"/>
                            <field name="signed"/>
                            <field name="signed_by_user_id"/>
                            <field name="signed_on"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
